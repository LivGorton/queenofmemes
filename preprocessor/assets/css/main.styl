// CONFIG
$scrollbar-disable = true

// colors
$secondary-color = #000

$main-color = #f33

$selection-color = alpha(#bdbdbd, 0.6)

@import 'config'
@import 'fonts'

// bootstrap4 @media definitions for easy responsiveness
sm = "screen and (min-width: 544px)"
md = "screen and (min-width: 768px)"
lg = "screen and (min-width: 992px)"
xl = "screen and (min-width: 1200px)"

@keyframes rainbow-flash {
0% {color: #ff0000;}
10% {color: #ff8000;}
20% {color: #ffff00;}
30% {color: #80ff00;}
40% {color: #00ff00;}
50% {color: #00ff80;}
60% {color: #00ffff;}
70% {color: #0080ff;}
80% {color: #0000ff;}
90% {color: #8000ff;}
100% {color: #ff0080;}
}

$animt = .25s

rainbow-bdr()
	border 15px solid
	animation-name rainbow-flash
	animation-duration $animt
	animation-iteration-count infinite
	animation-direction alternate

.rainbow-flash
	animation-name rainbow-flash
	animation-duration $animt
	animation-iteration-count infinite
	animation-direction alternate

.rainbow-flash.offset-1
	animation-duration $animt * 0.7

.rainbow-flash.offset-2
	animation-duration $animt * 1.3



@keyframes rainbowbg {
	0%{background-position:0% 53%}
	50%{background-position:100% 48%}
	100%{background-position:0% 53%}
}

$bg-anim-t = .5s

body
	background: linear-gradient(72deg, #ff2222, #ff22ff, #2222ff, #22ffff, #22ff22, #22ff22, #ffff22, #ff2222);
	font-family 'comic sans ms', 'comic sans' !important
	font-size 16px
	background-size: 1600% 1600%;
	-webkit-animation: rainbowbg $bg-anim-t ease infinite;
	-moz-animation: rainbowbg $bg-anim-t ease infinite;
	animation: rainbowbg $bg-anim-t ease infinite;
	height 100vh
	text-shadow: 	50px 50px 1px alpha(#000, 0.1),
					-50px 50px 1px alpha(#000, 0.1),
					-50px -50px 1px alpha(#000, 0.1),
					50px -50px 1px alpha(#000, 0.1)




.main-wrapper
	text-align center
	width 100%
	& h1
		text-align center
		font-size 3em
		@media sm
			font-size 4em
		@media md
			font-size 5.5em
		@media lg
			font-size 7em
		@media xl
			font-size 8em



.controls
	margin 15% 0
	& .left
		float left
	& .right
		float right

